{
  "name": "electron",
  "version": "1.0.0",
  "description": "analytics",
  "main": "main.js",
  "scripts": {
    "dist": "electron-builder",
    "build": "npm run dist"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "firebase-admin": "^13.1.0",
    "fs": "^0.0.1-security",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "assets/python-scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/python-scripts/",
        "to": "assets/python-scripts/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "nataliecrowell",
        "repo": "FULLBRIGHT"
      }
    ]
  }
}
